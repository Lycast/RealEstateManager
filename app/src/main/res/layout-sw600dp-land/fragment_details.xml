<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navigation.DetailsFragment"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/recyclerView_image"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_media"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/recyclerView_image"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/details_activity_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ici est la description du bien"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/details_activity_tv_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp">

        <!-- Surface -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surface"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_surface_18"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/details_activity_tv_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"/>

        <!-- Number of rooms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_rooms"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_home_18"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/details_activity_tv_room_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"/>

        <!-- Number of bathrooms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_bathrooms"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_hot_tub_18"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/details_activity_tv_bathroom_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"/>

        <!-- Number of bedrooms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_bedrooms"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_local_hotel_18"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/details_activity_tv_bedroom_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Location -->
    <TextView
        android:id="@+id/details_activity_tv_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/location"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_location_on_18"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_activity_tv_description"
        app:layout_constraintLeft_toRightOf="@id/linear_layout_left"/>

    <TextView
        android:id="@+id/details_activity_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/details_activity_tv_location_title"
        app:layout_constraintLeft_toRightOf="@id/linear_layout_left"/>

</androidx.constraintlayout.widget.ConstraintLayout>