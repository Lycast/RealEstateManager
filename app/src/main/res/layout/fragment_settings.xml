<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navigation.SettingsFragment">

    <ImageView
        android:id="@+id/iv_settings_frag_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:contentDescription="@string/desc_close_details"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_unity_monetary"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/iv_settings_frag_back"
        app:layout_constraintBottom_toTopOf="@id/tv_title_color"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/dollars"
        android:textOff="@string/euro"
        app:layout_constraintTop_toTopOf="@id/tv_title_switcher"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_switcher"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/change_color_of_your_application"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/iv_color_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/iv_color_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="?android:attr/textSelectHandle"
        app:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_color_2"
        app:layout_constraintTop_toBottomOf="@id/tv_title_switcher"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_color_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="?android:attr/textSelectHandle"
        app:tint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_color_1"
        app:layout_constraintRight_toLeftOf="@id/iv_color_3"
        app:layout_constraintTop_toBottomOf="@id/tv_title_switcher"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_color_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="?android:attr/textSelectHandle"
        app:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_color_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_switcher"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>